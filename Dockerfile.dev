# Development Dockerfile with Air for hot-reloading
FROM golang:1.24-alpine AS development

# Install Air for hot-reloading (v1.61.1 is compatible with Go 1.23)
RUN go install github.com/air-verse/air@v1.61.1

# Install build dependencies
RUN apk add --no-cache git make

# Set working directory
WORKDIR /app

# Copy shared packages first
COPY omnipos-pkg /app/omnipos-pkg
COPY omnipos-proto /app/omnipos-proto

# Copy go mod files from user-service
WORKDIR /app/omnipos-user-service
COPY omnipos-user-service/go.mod omnipos-user-service/go.sum ./

RUN go mod download

# Copy the rest of the user-service source code
COPY omnipos-user-service/ ./

# Expose gRPC port
EXPOSE 50051

# Copy entrypoint script
COPY omnipos-user-service/docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Run entrypoint script
CMD ["/docker-entrypoint.sh"]
